<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profil"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FragmentUi.profil.ProfilFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/ic_background"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_icn_logophtobor"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/txt_nama_user"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|top"
                android:text="Pemantauan Satwa Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#858181"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anak Petak ID       : "/>

            <TextView
                android:id="@+id/pemantauan_petakiddetail"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201631141"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anak Petak            : "/>

            <TextView
                android:id="@+id/pemantauan_anakpetakdetail"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201631141"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Satwa           : "/>

            <TextView
                android:id="@+id/pemantauan_jenissatwadetail"
                android:layout_marginTop="-19dp"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Satwa       : "/>

            <TextView
                android:id="@+id/pemantauan_jumlahsatwadetail"
                android:layout_marginTop="-19dp"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="141"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu Lihat           : "/>

            <TextView
                android:id="@+id/pemantauan_waktulihatdetail"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15-05-1998"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cara Melihat          : "/>

            <TextView
                android:id="@+id/pemantauan_caralihatdetail"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kebakaran Hutan"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan            : "/>

            <TextView
                android:id="@+id/pemantauan_keterangandetail"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suatu hari di hari yang cerah, terdapat sebuah makhluk"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/detail_btneditpemantauan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_edit_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"/>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/detail_btndeletepemantauan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_delete_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
