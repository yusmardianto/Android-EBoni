<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_frame_login"
    tools:context=".ui.bukuobor.BukuOborFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp">
        <LinearLayout
            android:id="@+id/bukuobor"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:id="@+id/linear_gangguan"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="650dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_icn_keamananhtn" />
                    </LinearLayout>
                    <TextView
                        android:text="@string/text_gangguan"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="75dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:id="@+id/linear_perubahankelas"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="650dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_icn_perubahankelashtn" />
                    </LinearLayout>
                    <TextView
                        android:text="@string/text_perubahankelas"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="83dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:id="@+id/linear_interaksi"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_width="650dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_icn_interaksimdh" />

                    </LinearLayout>
                    <TextView
                        android:text="@string/text_interaksimdh"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginTop="85dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:id="@+id/linear_pemantauan"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_width="650dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_icn_pemantauansatwa" />
                    </LinearLayout>
                    <TextView
                        android:text="@string/text_pemantauansatwa"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="85dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:id="@+id/linear_lappal"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:src="@drawable/ic_icn_palbatas"
                            android:layout_marginTop="20dp"
                            android:layout_width="650dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                    <TextView
                        android:text="@string/text_laporanpal"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="85dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:id="@+id/linear_regispcp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:src="@drawable/ic_icn_registerpcp"
                            android:layout_marginTop="20dp"
                            android:layout_width="650dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                    <TextView
                        android:text="@string/text_registerpcp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="85dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:id="@+id/linear_identifikasitenurial"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:src="@drawable/ic_icn_palbatas"
                            android:layout_marginTop="15dp"
                            android:layout_width="650dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                    <TextView
                        android:text="Identifikasi Konflik Tenurial"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="80dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:src="@drawable/ic_icn_registerpcp"
                            android:layout_marginTop="20dp"
                            android:layout_width="650dp"
                            android:layout_height="65dp"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                    <TextView
                        android:text="@string/text_registerpcp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="85dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>