<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <EditText
            android:id="@+id/edit_palbatas_tanggal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Tanggal"/>

        <EditText
            android:id="@+id/edit_palbatas_jenispal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Jenis PAL"/>

        <EditText
            android:id="@+id/edit_palbatas_kondisipal"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Kondisi ( Dropdown )"/>

        <EditText
            android:id="@+id/edit_palbatas_nopal"
            android:layout_marginTop="15dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Nomer"/>

        <EditText
            android:id="@+id/edit_palbatas_jumlahpal"
            android:layout_marginTop="-44dp"
            android:layout_marginLeft="185dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Jumlah"/>

        <EditText
            android:id="@+id/edit_palbatas_ketpal"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/ic_background"
            android:hint="Keterangan"/>

        <Button
            android:id="@+id/edit_palbatas_btnsimpanpal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/text_simpan"/>
    </LinearLayout>
</ScrollView>