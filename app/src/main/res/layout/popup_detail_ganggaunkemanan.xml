<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profil.ProfilFragment">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/ic_background"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_icn_logophtobor"
                android:layout_centerHorizontal="true"/>



                <TextView
                    android:id="@+id/txt_nama_user"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center|top"
                    android:text="Gangguan Kemanan Detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#858181"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anak Petak ID       : "/>

                <TextView
                    android:id="@+id/gangguan_petakdetailid"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="201631141"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tahun                     : "/>

                <TextView
                    android:id="@+id/gangguan_tahundetail"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor HA             : "/>

                <TextView
                    android:id="@+id/gangguan_nomorhadetail"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="141"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal HA           : "/>

                <TextView
                    android:id="@+id/gangguan_tanggaldetail"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15-05-1998"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kejadian                 : "/>

                <TextView
                    android:id="@+id/gangguan_kejadiandetail"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kebakaran Hutan"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kerugian Luas       : "/>

                <TextView
                    android:id="@+id/gangguan_rugiluasdetail"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100Ha"/>

                <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kerugian Pohon    : "/>

                <TextView
                    android:id="@+id/gangguan_rugipohondetail"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100Ha"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kerugian KYP        : "/>

                <TextView
                    android:id="@+id/gangguan_rugikypdetail"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100Ha"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kerugian KYB        : "/>

                <TextView
                    android:id="@+id/gangguan_rugikybdetail"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100Ha"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kerugian Getah     : "/>

                <TextView
                    android:id="@+id/gangguan_rugigetahdetail"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100ml"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai Kerugian        : "/>

                <TextView
                    android:id="@+id/gangguan_nilairugidetail"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.1.000.000"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan            : "/>

                <TextView
                    android:id="@+id/gangguan_keterangandetail"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suatu hari di hari yang cerah, terdapat sebuah makhluk"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/detail_btneditgangguan"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_edit_black_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit"/>

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/detail_btndeletegangguan"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_delete_black_24dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delete"/>

                    </LinearLayout>
                </LinearLayout>




        </LinearLayout>
        </ScrollView>
    </LinearLayout>
