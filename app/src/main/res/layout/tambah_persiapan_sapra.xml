<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#fff">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_aal_bold"
                android:text="Tambah Data Persiapan Sapra"
                android:textSize="18dp" />
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_aal_bold"
                android:text="[ nomor surat perintah kerja ]"
                android:textSize="12dp" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_item_popup"
            android:id="@+id/persiapan_sapra_spinner_jenis_sapra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/array_jenis_sapra"/>

        <EditText
            android:id="@+id/persiapan_sapra_anak_petak"
            android:hint="Anak Petak"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_popup"/>

<!--        <LinearLayout-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="vertical">-->

<!--            <androidx.appcompat.widget.AppCompatSpinner-->
<!--                android:background="@drawable/bg_item_popup"-->
<!--                android:fontFamily="@font/font_aal_default"-->
<!--                android:id="@+id/persiapan_sapra_spinner_anak_petak"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="40dp" />-->
<!--        </LinearLayout>-->

        <EditText
            android:id="@+id/persiapan_sapra_tanggal"
            android:hint="Tanggal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_popup"/>

        <EditText
            android:id="@+id/persiapan_sapra_target"
            android:hint="Target"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_popup"/>

        <EditText
            android:id="@+id/persiapan_sapra_realisasi"
            android:hint="Realisasi"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_popup"/>

        <EditText
            android:id="@+id/persiapan_sapra_keterangan"
            android:hint="Keterangan Pasang Batas"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_item_popup"
            android:inputType="text|textMultiLine"/>

    </LinearLayout>

</LinearLayout>