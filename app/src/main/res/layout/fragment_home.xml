<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrange"
    >

    <RelativeLayout
        android:id="@+id/linear_layout_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="18"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:text="Hi, Dimas Prayogi"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/text_tanggal"
                        android:layout_below="@+id/text_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"

                        android:text="Senin, 21 Oktober 2019"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="13dp"/>

                </LinearLayout>
                    <ImageButton
                        android:background="@drawable/logo_eboni_putih"
                        android:layout_width="55dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_activity"
                    android:layout_below="@id/text_tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:orientation="horizontal"
                        android:background="@drawable/ic_background">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="15"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:textStyle="bold"
                                    android:layout_marginTop="-5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="99"
                                    android:textColor="#E46C15"
                                    android:textSize="50dp"
                                   />

                                <TextView
                                    android:textStyle="bold"
                                    android:layout_marginTop="-15dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:text="Transaksi"
                                    android:textColor="#E46C15"
                                    android:textSize="10dp" />
                            </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="15"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="-5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="73"
                                android:textColor="#E46C15"
                                android:textSize="50dp"
                                />

                            <TextView
                                android:layout_marginTop="-15dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:text="Terkirim ke server"
                                android:textColor="#E46C15"
                                android:textSize="10dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="15"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="-5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="16"
                                android:textColor="#E46C15"
                                android:textSize="50dp"
                                />

                            <TextView
                                android:layout_marginTop="-15dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:text="Belum terkirim"
                                android:textColor="#E46C15"
                                android:textSize="10dp"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="-50dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:background="@drawable/ic_background">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_marginTop="35dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:layout_marginTop="10dp"
                                app:cardBackgroundColor="@color/colorOrange"
                                app:cardCornerRadius="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:background="@drawable/ic_background"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_icn_keamananhtn"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="10"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:text="Gangguan Keamanan Hutan"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txt_jumlah_data_gukamhut"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="200"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                app:cardBackgroundColor="@color/colorOrange"
                                app:cardCornerRadius="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:background="@drawable/ic_background"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_icn_perubahankelashtn"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="10"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Perubahan Kelas"
                                            android:layout_marginLeft="10dp"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txt_jumlah_data_perubahankelas"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="200"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                app:cardBackgroundColor="@color/colorOrange"
                                app:cardCornerRadius="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:background="@drawable/ic_background"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_icn_interaksimdh"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="10"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Interaksi MDH"
                                            android:layout_marginLeft="10dp"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txt_jumlah_data_interaksimdh"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="200"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                app:cardBackgroundColor="@color/colorOrange"
                                app:cardCornerRadius="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:background="@drawable/ic_background"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_icn_pemantauansatwa"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="10"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Pemantauan Satwa"
                                            android:layout_marginLeft="10dp"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txt_jumlah_data_pemantauansatwa"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="200"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                app:cardBackgroundColor="@color/colorOrange"
                                app:cardCornerRadius="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:background="@drawable/ic_background"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_icn_palbatas"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="10"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Laporan PAL Batas"
                                            android:layout_marginLeft="10dp"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txt_jumlah_data_laporanpalbatas"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="200"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                app:cardBackgroundColor="@color/colorOrange"
                                app:cardCornerRadius="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:background="@drawable/ic_background"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_icn_registerpcp"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="10"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Register PCP"
                                            android:layout_marginLeft="10dp"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txt_jumlah_data_registerpcp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="200"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                app:cardBackgroundColor="@color/colorOrange"
                                app:cardCornerRadius="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:background="@drawable/ic_background"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_icn_perubahankelashtn"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="10"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Identifikasi Konflik Tenurial"
                                            android:layout_marginLeft="10dp"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="15"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txt_jumlah_data_identifikasitenurial"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="200"
                                            android:textColor="#fff"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>