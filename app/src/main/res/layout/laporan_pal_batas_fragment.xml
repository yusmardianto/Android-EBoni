<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff">

    <androidx.appcompat.widget.Toolbar
        android:paddingLeft="-16dp"
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EAEAEA">

        <TextView
            android:layout_marginRight="15dp"
            android:fontFamily="@font/font_aal_default"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Data Laporan Pal Batas"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:id="@+id/linear_tambahlaporanpal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/txt_search_laporanpal"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_background"
            android:hint="@string/text_cari_nomor_pal"/>
        <ImageView
            android:clickable="true"
            android:id="@+id/img_tambahlaporanpal"
            android:layout_weight="4"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:src="@drawable/ic_add_black_24dp"
            android:background="@color/colorPrimary"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tidakadadatalaporanpal"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/font_aal_default"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tidak ada data"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/linear_tambahlaporanpal"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pelaporanpal_recycler">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>