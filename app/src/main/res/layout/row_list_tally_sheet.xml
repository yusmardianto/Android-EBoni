<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/ic_background"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/list_tally_sheet">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/font_aal_bold"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="KPH" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : " />

            <TextView
                android:fontFamily="@font/font_aal_default"
                android:id="@+id/list_ts_kph"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="KPH Sekdut" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/font_aal_bold"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Bagian Hutan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : " />

            <TextView
                android:fontFamily="@font/font_aal_default"
                android:id="@+id/list_ts_bagian_hutan"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Bagian Hutan" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/font_aal_bold"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Petak" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : " />

            <TextView
                android:fontFamily="@font/font_aal_default"
                android:id="@+id/list_ts_petak"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="37" />
        </LinearLayout>

        <ImageView
            android:id="@+id/name_info_alert_ts"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp" />

        <TextView
            android:fontFamily="@font/font_aal_default"
            android:id="@+id/name_data_sinkron_ts"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-20dp"
            android:text="Data belum disinkronkan"
            android:textColor="#FF0000 " />
    </LinearLayout>

    <ImageView
        android:layout_weight="0"
        android:src="@drawable/ic_right"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingTop="5dp" />


</LinearLayout>