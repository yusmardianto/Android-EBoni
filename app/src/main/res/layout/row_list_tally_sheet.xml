<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/ic_background"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/list_tally_sheet">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:fontFamily="@font/font_aal_bold"
                android:text="KPH" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : " />

            <TextView
                android:fontFamily="@font/font_aal_default"
                android:id="@+id/list_ts_kph"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="KPH Sekdut" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/font_aal_bold"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Bagian Hutan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : " />

            <TextView
                android:fontFamily="@font/font_aal_default"
                android:id="@+id/list_ts_bagian_hutan"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Bagian Hutan" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/font_aal_bold"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Petak" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : " />

            <TextView
                android:fontFamily="@font/font_aal_default"
                android:id="@+id/list_ts_petak"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="37" />
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/name_info_alert_ts"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp" />

        <TextView
            android:visibility="gone"
            android:fontFamily="@font/font_aal_default"
            android:id="@+id/name_data_sinkron_ts"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-20dp"
            android:text="Data belum disinkronkan"
            android:textColor="#FF0000 " />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear_ts_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_visibility_black_24dp" />
            <TextView
                android:fontFamily="@font/font_aal_bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_ts_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp" />
            <TextView
                android:fontFamily="@font/font_aal_bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>