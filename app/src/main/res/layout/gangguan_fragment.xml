<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    tools:context=".FragmentUi.gangguan.ListGangguanFragment">

    <androidx.appcompat.widget.Toolbar
        android:paddingLeft="-16dp"
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EAEAEA">

        <TextView
            android:layout_marginRight="15dp"
            android:fontFamily="@font/font_aal_default"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Data Gangguan Hutan"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center" />

    </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_marginTop="45dp"
            android:orientation="horizontal"
            android:id="@+id/linear_tambahgangguan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.inputmethodservice.ExtractEditText
                android:id="@+id/txt_search_gangguan"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_background"
                android:hint="@string/text_cari_kejadian"/>
            <ImageView
                android:clickable="true"
                android:id="@+id/img_tambahgangguan"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:src="@drawable/ic_add_black_24dp"
                android:background="@color/colorPrimary"
                android:layout_height="45dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_tidakadadatagangguan"
            android:layout_marginTop="350dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/font_aal_default"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tidak ada data"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/linear_tambahgangguan"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gangguan_recycler">

        </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>