<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FragmentUi.bukuobor.PengelolaanHutanFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        app:cardCornerRadius="@dimen/spacing_medium"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/persemaian"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_aal_bold"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="Persemaian"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/theme_orange"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_logo_eboni" />

                                <TextView
                                    android:textAlignment="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_aal_default"
                                    android:text="Buku Hijau"
                                    android:textColor="@color/material_grey_600" />

                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tanaman"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        app:cardCornerRadius="@dimen/spacing_medium"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:padding="10dp">

                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@color/theme_orange"
                                    android:id="@+id/title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="Tanaman"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:fontFamily="@font/font_aal_bold"
                                    />

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_logo_eboni" />

                                <TextView
                                    android:textAlignment="center"
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Persiapan Tanaman"
                                    android:textColor="@color/material_grey_600" />

                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/pemeliharaan"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        app:cardCornerRadius="@dimen/spacing_medium"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_aal_bold"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="Pemeliharaan"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/theme_orange"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_logo_eboni" />

                                <TextView
                                    android:textAlignment="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_aal_default"
                                    android:text="Pemeliharaan I,II,IV,V"
                                    android:textColor="@color/material_grey_600" />

                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/perawatan"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        app:cardCornerRadius="@dimen/spacing_medium"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:padding="10dp">

                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@color/theme_orange"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="Perawatan"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:fontFamily="@font/font_aal_bold"
                                    />

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_logo_eboni" />

                                <TextView
                                    android:textAlignment="center"
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Penjarangan"
                                    android:textColor="@color/material_grey_600" />

                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        app:cardCornerRadius="@dimen/spacing_medium"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/susunrisalah"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_aal_bold"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="Susun Risalah"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/theme_orange"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_logo_eboni" />

                                <TextView
                                    android:textAlignment="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_aal_default"
                                    android:text="Penyusunan Risalah"
                                    android:textColor="@color/material_grey_600" />

                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        app:cardCornerRadius="@dimen/spacing_medium"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/monitoring_klshtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:padding="10dp">

                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@color/theme_orange"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="Monitoring"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:fontFamily="@font/font_aal_bold"
                                    />

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_logo_eboni" />

                                <TextView
                                    android:textAlignment="center"
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Monitoring Kelas Hutan dan Penampakan"
                                    android:textColor="@color/material_grey_600" />

                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        app:cardCornerRadius="@dimen/spacing_medium"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/pengelolaanhutan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:padding="10dp">

                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@color/theme_orange"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="Pengelolaan Hutan"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:fontFamily="@font/font_aal_bold"
                                    />

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_logo_eboni" />

                                <TextView
                                    android:textAlignment="center"
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pengelolaan Hutan"
                                    android:textColor="@color/material_grey_600" />

                            </LinearLayout>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>