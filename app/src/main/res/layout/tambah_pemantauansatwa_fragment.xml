<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <EditText
            android:id="@+id/pemantauan_petak"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Petak"/>

        <EditText
            android:id="@+id/pemantauan_anakpetak"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Anak Petak"/>

        <EditText
            android:id="@+id/pemantauan_jenissatwa"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Jenis Satwa ( Dropdown )"/>

        <EditText
            android:id="@+id/pemantauan_jumlahsatwa"
            android:layout_marginTop="15dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Jumlah"/>

        <EditText
            android:id="@+id/pemantauan_waktulihat"
            android:layout_marginTop="-44dp"
            android:layout_marginLeft="185dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Waktu Lihat"/>

        <EditText
            android:id="@+id/pemantauan_caralihat"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_background"
            android:hint="Cara Melihat ( Dropdown )"/>

        <EditText
            android:id="@+id/pemantauan_keterangan"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/ic_background"
            android:hint="Keterangan"/>

        <Button
            android:id="@+id/pemantauan_btnsubmit"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/text_submit"/>
    </LinearLayout>
</ScrollView>