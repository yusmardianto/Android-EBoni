<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editgangguan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ui.gangguan.editgangguan.EditGangguanFragment">

    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <EditText
            android:id="@+id/edit_gangguan_idpetak"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_background"
            android:hint="Anak Petak"/>

        <EditText
            android:id="@+id/edit_gangguan_tahun"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Tahun"/>


        <EditText
            android:id="@+id/edit_gangguan_noha"
            android:layout_marginTop="15dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="No HA"/>

        <EditText
            android:id="@+id/edit_gangguan_tanggalHA"
            android:layout_marginTop="-44dp"
            android:layout_marginLeft="185dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Tanggal"/>

        <EditText
            android:id="@+id/edit_gangguan_kejadian"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_background"
            android:hint="Isikan Kejadian . . . "/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kerugian"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edit_gangguan_luas"
            android:layout_marginTop="5dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Kerugian Luas"/>

        <EditText
            android:id="@+id/edit_gangguan_jmlpohon"
            android:layout_marginTop="-44dp"
            android:layout_marginLeft="185dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Rugi Pohon"/>

        <EditText
            android:id="@+id/edit_gangguan_kerugiankyp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_background"
            android:hint="Kerugian KYP"/>

        <EditText
            android:id="@+id/edit_gangguan_kerugiankyb"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_background"
            android:hint="Kerugian KYB"/>

        <EditText
            android:id="@+id/edit_gangguan_kerugiangetah"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_background"
            android:hint="Kerugian Getah"/>

        <EditText
            android:id="@+id/edit_gangguan_nilaikerugian"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_background"
            android:hint="Nilai kerugian"/>

        <EditText
            android:id="@+id/edit_gangguan_keterangan"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/ic_background"
            android:hint="Tambahkan keterangan . . . "/>

        <Button
            android:id="@+id/edit_gangguan_btnsimpan"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/text_simpan"/>
    </LinearLayout>

</ScrollView>
