<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <EditText
            android:id="@+id/pcp_nopcp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Nomer PCP"/>

        <EditText
            android:id="@+id/pcp_petakpcp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Petak"/>

        <EditText
            android:id="@+id/pcp_anakpetakpcp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Anak Petak"/>

        <EditText
            android:id="@+id/pcp_tahunpcp"
            android:layout_marginTop="15dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Tahun"/>

        <EditText
            android:id="@+id/pcp_luasbakupcp"
            android:layout_marginTop="-44dp"
            android:layout_marginLeft="185dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Luas Baku"/>

        <EditText
            android:id="@+id/pcp_luasblockpcp"
            android:layout_marginTop="15dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Luas Block"/>

        <EditText
            android:id="@+id/pcp_umurpcp"
            android:layout_marginTop="-44dp"
            android:layout_marginLeft="185dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Umur"/>

        <EditText
            android:id="@+id/pcp_rataratapcp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_background"
            android:hint="Rata - Rata Keliling"/>

        <EditText
            android:id="@+id/pcp_bonitapcp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_background"
            android:hint="Bonita"/>

        <EditText
            android:id="@+id/pcp_mpcp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_background"
            android:hint="M_PCP"/>

        <EditText
            android:id="@+id/pcp_normalpcp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_background"
            android:hint="Normal Dalam PCP"/>

        <EditText
            android:id="@+id/pcp_nmatipcp"
            android:layout_marginTop="15dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="N_Mati"/>

        <EditText
            android:id="@+id/pcp_jaranganpcp"
            android:layout_marginTop="-44dp"
            android:layout_marginLeft="185dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background"
            android:hint="Tahun Jarangan"/>

        <EditText
            android:id="@+id/pcp_ketpcp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/ic_background"
            android:hint="Keterangan"/>

        <Button
            android:id="@+id/pcp_btnsubmitpcp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/text_submit"/>
    </LinearLayout>
</ScrollView>