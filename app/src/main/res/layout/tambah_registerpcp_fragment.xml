<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linear_layout_home"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/colorOrange"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/font_aal_default"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Tambah Register PCP"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:background="@drawable/ic_background">

                    <ScrollView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Nomer PCP"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_nopcp"
                                    android:fontFamily="@font/font_aal_default"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_background_grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Anak Petak"
                                    android:textColor="#424242"/>

                                <androidx.appcompat.widget.AppCompatSpinner
                                    android:fontFamily="@font/font_aal_default"
                                    android:id="@+id/spinner_anak_petak_pcp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <EditText
                                    android:id="@+id/pcp_anakpetakpcp"
                                    android:fontFamily="@font/font_aal_default"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ic_background"
                                    android:hint="Anak Petak" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="5dp"
                                    android:background="#EFEFEF" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tahun"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_tahunpcp"
                                    android:fontFamily="@font/font_aal_default"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_background_grey"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Umur ( Thn )"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_umurpcp"
                                    android:fontFamily="@font/font_aal_default"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_background_grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Luas Blok"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_luasblockpcp"
                                    android:fontFamily="@font/font_aal_default"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_background_grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Luas Baku"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_luasbakupcp"
                                    android:fontFamily="@font/font_aal_default"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_background_grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Rata-Rata Keliling"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_rataratapcp"
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:inputType="number"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_background_grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Bonita"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_bonitapcp"
                                    android:fontFamily="@font/font_aal_default"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_background_grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="N Lapangan"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_nlapangan"
                                    android:fontFamily="@font/font_aal_default"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_background_grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="N Mati"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_nmatipcp"
                                    android:fontFamily="@font/font_aal_default"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_background_grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Normal dalam PCP"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_normalpcp"
                                    android:fontFamily="@font/font_aal_default"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_background_grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tahun Jarangan"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_jaranganpcp"
                                    android:fontFamily="@font/font_aal_default"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_background_grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Peninggi"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_peninggi"
                                    android:fontFamily="@font/font_aal_default"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/ic_background_grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Keterangan"
                                    android:textColor="#424242" />

                                <EditText
                                    android:id="@+id/pcp_ketpcp"
                                    android:fontFamily="@font/font_aal_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:background="@drawable/ic_background_grey"
                                    android:hint="Tambahkan Keterangan (Optional)"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/pcp_btnsubmitpcp"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/font_aal_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/shape_btnlogin"
                                    android:text="Simpan"
                                    android:textColor="#F9F9F9" />
                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>