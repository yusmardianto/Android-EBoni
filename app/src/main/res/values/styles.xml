<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Textfloating">
        @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="colorControlActivated">@color/theme_orange</item>
        <item name="colorControlHighlight">@color/md_orange_A100</item>
        <item name="hintTextAppearance">@color/theme_hijau</item>
        <item name="errorTextAppearance">@color/btn_color3</item>
        <item name="android:textColor">@color/theme_hijau</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
    </style>

</resources>
